<config>
    <modules>
        <Tamedo_Stripe>
            <version>1.0.0</version>
        </Tamedo_Stripe>
    </modules>
    <global>
        <models>
            <tamedo_stripe>
                <class>Tamedo_Stripe_Model</class>
            </tamedo_stripe>
        </models>
        <helpers>
            <tamedo_stripe>
                <class>Tamedo_Stripe_Helper</class>
            </tamedo_stripe>
        </helpers>
    </global>

    <default>
        <payment>
            <tamedo_stripe>
            	<model>tamedo_stripe/payment</model>
            	<api_key backend_model="adminhtml/system_config_backend_encrypted"/>
            	<payment_action>authorize_capture</payment_action>
            	<title>Stripe</title>
            	<cctypes>AE,VI,MC,DI,JCB</cctypes>
            	<useccv>1</useccv>
                <min_order_total>0.50</min_order_total>
            </tamedo_stripe>
        </payment>
    </default>
</config>